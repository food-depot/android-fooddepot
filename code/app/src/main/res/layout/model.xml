<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/artichokes" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTxt"
        android:layout_toEndOf="@+id/locationicon"
        android:paddingLeft="10dp"
        android:text="3932 Rivermark Plaza, Santa Clara, CA 95054" />

    <TextView
        android:id="@+id/distancetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/locationicon"
        android:layout_toEndOf="@+id/locationicon"
        android:paddingLeft="10dp"
        android:text="0.5 miles" />

    <ImageView
        android:id="@+id/rating"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/locationicon"
        android:layout_below="@+id/distancetext"
        android:src="@drawable/fourstar" />

    <ImageView
        android:id="@+id/locationicon"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/nameTxt"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/imageView"
        android:src="@drawable/cardistanceicon" />

    <TextView
        android:id="@+id/nameTxt"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/imageView"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />



</RelativeLayout>