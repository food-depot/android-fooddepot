<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fooddepot.activity.cook.CookMenuAdapterFragment">

    <ImageView
        android:id="@+id/food_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/itemName_txtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textStyle="bold"
        android:layout_marginLeft="120dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/qnty_txtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX"
        android:layout_alignLeft="@+id/itemName_txtvw"
        android:layout_below="@+id/itemName_txtvw"/>

    <TextView
        android:id="@+id/price_txtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ XX.YY/unit"
        android:layout_alignBaseline="@+id/qnty_txtvw"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:id="@+id/availableuntil_txtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mm/dd/yy hh:mm"
        android:layout_alignLeft="@+id/itemName_txtvw"
        android:layout_below="@+id/qnty_txtvw" />

    <TextView
        android:id="@+id/itemdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item vsfdv fvv fdvv dvdc dvv fvadv dfavfb fvav dvvs svvf fvfa fvfv"
        android:layout_below="@+id/availableuntil_txtvw"
        android:layout_alignLeft="@+id/itemName_txtvw"
        android:textColor="@color/orderList"/>

        <RatingBar
        android:id="@+id/item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemName_txtvw"
        android:layout_below="@+id/itemdesc"
        android:theme="@style/RatingBar"
        android:isIndicator="true"/>

</RelativeLayout>
